#==============================================================================
# Azure AI Search Configuration
#==============================================================================
# Your Azure AI Search service endpoint
# Example: https://your-search-service.search.windows.net
AZURE_SEARCH_ENDPOINT=

# Admin API key from Azure Portal > Your Search Service > Keys
AZURE_SEARCH_KEY=

# Name for standard text search index
AZURE_SEARCH_INDEX_NAME=fileshare-documents

# Name for vector-enabled search index
AZURE_SEARCH_VECTOR_INDEX_NAME=fileshare-vector-documents

# Search service API version
AZURE_SEARCH_API_VERSION=2023-11-01


#==============================================================================
# Azure OpenAI Configuration (Required for Vector Search)
#==============================================================================
# Azure OpenAI service endpoint
# Example: https://your-openai.openai.azure.com
AZURE_OPENAI_ENDPOINT=

# API key from Azure Portal > Your OpenAI Service > Keys
AZURE_OPENAI_KEY=

# Deployment name for embeddings model
# Recommended: text-embedding-3-large (3072 dimensions)
# Alternative: text-embedding-ada-002 (1536 dimensions)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Deployment name for chat/completion model (optional, for future features)
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4

# OpenAI API version
AZURE_OPENAI_API_VERSION=2024-05-01-preview

# Embedding model dimensions (must match your deployment)
# text-embedding-3-large: 3072
# text-embedding-ada-002: 1536
EMBEDDING_DIMENSIONS=3072


#==============================================================================
# File Share Configuration
#==============================================================================
# Path to your file share (local, network, or cloud-mounted)
# Windows UNC path: \\\\SERVER\\Share\\Path
# Linux/Mac path: /mnt/share/path
# Local path: C:\\Documents\\MyFiles
FILE_SHARE_PATH=

# Comma-separated list of file extensions to index
# Supported: .txt, .docx, .pdf, .xlsx, .pptx, .md
SUPPORTED_EXTENSIONS=.txt,.docx,.pdf,.xlsx,.pptx

# Exclude directories (comma-separated, optional)
# Example: temp,cache,node_modules
EXCLUDE_DIRECTORIES=

# Maximum file size to process (in MB)
MAX_FILE_SIZE_MB=50


#==============================================================================
# Indexing Configuration
#==============================================================================
# Number of tokens per text chunk
# Recommended: 500-1500 for general documents
CHUNK_SIZE=1000

# Overlap between chunks (tokens)
# Recommended: 100-300 to maintain context
CHUNK_OVERLAP=200

# Batch size for uploading documents
# Higher = faster, but more memory usage
BATCH_SIZE=100

# Maximum concurrent file processing
MAX_WORKERS=4

# Enable incremental indexing (only process changed files)
INCREMENTAL_INDEXING=true


#==============================================================================
# Search Configuration
#==============================================================================
# Default number of search results to return
DEFAULT_TOP_K=5

# Enable semantic reranking (requires Basic tier or higher)
ENABLE_SEMANTIC_RERANKING=true

# Minimum relevance score threshold (0.0 - 1.0)
MIN_RELEVANCE_SCORE=0.7


#==============================================================================
# Logging Configuration
#==============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
LOG_FILE=logs/indexer.log

# Enable console logging
LOG_TO_CONSOLE=true

# Log format: simple, detailed, json
LOG_FORMAT=detailed


#==============================================================================
# Performance & Optimization
#==============================================================================
# Cache embeddings to reduce API calls
CACHE_EMBEDDINGS=true

# Cache directory
CACHE_DIR=.cache

# Retry failed operations (number of attempts)
MAX_RETRIES=3

# Retry delay in seconds
RETRY_DELAY=2


#==============================================================================
# Advanced Configuration (Optional)
#==============================================================================
# Custom metadata extractors (Python module path)
# CUSTOM_EXTRACTORS=my_extractors.CustomExtractor

# Post-processing hook (Python module path)
# POST_PROCESS_HOOK=my_hooks.process_document

# Index lifecycle policy (days to retain documents)
# INDEX_RETENTION_DAYS=365

# Enable telemetry and monitoring
ENABLE_TELEMETRY=false

# Application Insights connection string (optional)
# APPLICATIONINSIGHTS_CONNECTION_STRING=